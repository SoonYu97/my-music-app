{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "sing-along",
  "version": "0.1.0",
  "identifier": "com.sing-along.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sing Along",
        "width": 1280,
        "height": 720,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": "default-src 'self'; media-src 'self' data: blob:;"
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
